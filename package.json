{
  "name": "@digitallinguistics/app",
  "version": "0.1.0",
  "description": "The Lotus web app for managing linguistic data",
  "private": true,
  "homepage": "https://github.com/digitallinguistics/app#readme",
  "bugs": "https://github.com/digitallinguistics/app/issues",
  "license": "MIT",
  "author": {
    "name": "Daniel W. Hieber",
    "url": "https://danielhieber.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digitallinguistics/app.git"
  },
  "type": "module",
  "engines": {
    "node": ">=16.0"
  },
  "scripts": {
    "build": "node build",
    "build:cache": "node build/bin/buildCache.js",
    "build:copy": "node build/bin/copyAssets.js",
    "build:css": "node build/bin/buildCSS.js",
    "build:docs": "jsdoc -c build/jsdoc.json",
    "build:js": "node build/bin/buildJS.js",
    "build:stories": "node build/bin/buildStories.js",
    "cypress-ct": "start-server-and-test start:storybook 6006 cypress-ct-open",
    "cypress-ct-open": "cypress open --config-file test/cypress.component.json",
    "cypress-ct-run": "cypress run --config-file test/cypress.component.json",
    "cypress-e2e": "start-server-and-test start 3000 cypress-e2e-open",
    "cypress-e2e-open": "cypress open --config-file test/cypress.e2e.json",
    "cypress-e2e-run": "cypress run --config-file test/cypress.e2e.json",
    "cypress-it": "start-server-and-test start:storybook 6006 cypress-it-open",
    "cypress-it-open": "cypress open --config-file test/cypress.integration.json",
    "cypress-it-run": "cypress run --config-file test/cypress.integration.json",
    "quick-build": "node build/quickBuild.js",
    "start": "node build/bin/startServer.js",
    "start:storybook": "start-storybook --quiet -p 6006 -s dist --ci",
    "stop-only": "stop-only -f test,src",
    "storybook": "start-storybook -p 6006 -s dist",
    "test:storybook": "npm run cypress-ct-run && npm run cypress-it-run",
    "test": "npm run test:unit && start-server-and-test start:storybook 6006 test:storybook && npm run test:e2e && npm run test:perf",
    "test:component": "start-server-and-test start:storybook 6006 cypress-ct-run",
    "test:e2e": "start-server-and-test start 3000 cypress-e2e-run",
    "test:integration": "start-server-and-test start:storybook 6006 cypress-it-run",
    "test:perf": "lhci autorun && rimraf .lighthouseci",
    "test:unit": "mocha --bail src/**/*.unit.js test/*.unit.js"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/eslint-parser": "^7.15.7",
    "@lhci/cli": "^0.8.1",
    "@storybook/builder-webpack5": "^6.3.11",
    "@storybook/cli": "^6.3.11",
    "@storybook/html": "^6.3.11",
    "@storybook/manager-webpack5": "^6.3.11",
    "browserslist": "^4.17.3",
    "chai": "^4.3.4",
    "clean-css": "^5.1.3",
    "css-loader": "^6.4.0",
    "cypress": "^8.6.0",
    "esbuild": "^0.13.2",
    "esbuild-plugin-browserslist": "^0.2.1",
    "eslint": "^7.32.0",
    "eslint-plugin-chai-friendly": "^0.7.1",
    "eslint-plugin-cypress": "^2.11.3",
    "flexbox-reset": "^3.0.0",
    "fs-extra": "^10.0.0",
    "handlebars": "^4.7.7",
    "jsdoc": "^3.6.7",
    "jsdoc-export-default-interop": "^0.3.1",
    "less": "^4.1.1",
    "less-loader": "^10.1.0",
    "minami": "^1.2.3",
    "mocha": "^9.0.1",
    "mousetrap": "^1.6.5",
    "ora": "^6.0.0",
    "param-case": "^3.0.4",
    "readdirp": "^3.6.0",
    "semver": "^7.3.5",
    "serve-handler": "^6.1.3",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "start-server-and-test": "^1.14.0",
    "stop-only": "^3.1.0",
    "storybook": "^6.3.11",
    "stylelint": "^13.13.1",
    "svgstore": "^3.0.0-2",
    "uuid": "^8.3.2",
    "webpack": "^5.58.1"
  }
}
