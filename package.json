{
  "name": "@digitallinguistics/app",
  "version": "0.1.0",
  "description": "The Lotus web app for managing linguistic data",
  "private": true,
  "homepage": "https://github.com/digitallinguistics/app#readme",
  "bugs": "https://github.com/digitallinguistics/app/issues",
  "license": "MIT",
  "author": {
    "name": "Daniel W. Hieber",
    "url": "https://danielhieber.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digitallinguistics/app.git"
  },
  "type": "module",
  "engines": {
    "node": ">=16.0"
  },
  "scripts": {
    "build": "node build",
    "build:cache": "node build/bin/buildCache.js",
    "build:copy": "node build/bin/copyAssets.js",
    "build:docs": "jsdoc -c build/jsdoc.json",
    "build:html": "node build/bin/buildHTML.js",
    "build:js": "webpack --config build/webpack.config.js",
    "build:svg": "node build/bin/buildSVG.js",
    "cypress": "start-server-and-test start 3000 cypress-open",
    "cypress-open": "cypress open --config-file test/cypress.json",
    "cypress-run": "cypress run --config-file test/cypress.json",
    "start": "node server.js",
    "test": "npm run test:unit & npm run test:integration",
    "test:integration": "start-server-and-test start 3000 cypress-run",
    "test:unit": "mocha **/*.unit.*"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.14.7",
    "@babel/plugin-syntax-top-level-await": "^7.14.5",
    "chai": "^4.3.4",
    "cypress": "^7.6.0",
    "eslint": "^7.29.0",
    "eslint-plugin-chai-friendly": "^0.7.1",
    "eslint-plugin-cypress": "^2.11.3",
    "fs-extra": "^10.0.0",
    "handlebars": "^4.7.7",
    "ink-docstrap": "^1.3.2",
    "jsdoc": "^3.6.7",
    "mocha": "^9.0.1",
    "ora": "^5.4.1",
    "readdirp": "^3.6.0",
    "serve-handler": "^6.1.3",
    "start-server-and-test": "^1.12.5",
    "svgstore": "^3.0.0-2",
    "webpack": "^5.40.0",
    "webpack-cli": "^4.7.2"
  }
}
